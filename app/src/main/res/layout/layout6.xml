<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"

        android:gravity="center">
        <Button
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/ic_action_goleft"
            android:onClick="returnBackMap"
            android:text="@string/Preview_peticion"
            android:id="@+id/btnMapRequest"
            android:textColor="#FFFFFF"
            android:enabled="true"
            android:background="@drawable/verde"
            android:focusable="false"
            android:layout_margin="2dp"
            android:textSize="17sp" />
        <Button
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/ic_action_signal"
            android:text="@string/changeConvertura"
            android:id="@+id/button"
            android:textColor="#FFFFFF"
            android:background="@drawable/asul"
            android:onClick="showCoverage"
            android:layout_margin="2dp"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>
