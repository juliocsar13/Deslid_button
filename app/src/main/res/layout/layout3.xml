<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom|center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/layout_bottom_bottom">
            <Button
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:text="Llamar Taxi"
                android:id="@+id/btnCallTaxi"
                android:onClick="sendRequest"
                android:background="@drawable/asul"
                android:textColor="#ff000000"
                android:layout_margin="@dimen/layout_all_buttom_maps"
                android:textSize="@dimen/textsize_button_maps" />
            <Button
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:text="Cancelar taxi"
                android:background="@drawable/rojo"
                android:id="@+id/btnCancelTaxi"
                android:onClick="cancelRequest"
                android:textColor="#ff000000"
                android:layout_margin="@dimen/layout_all_buttom_maps"
                android:textSize="@dimen/textsize_button_maps"
                android:enabled="false" />
        </LinearLayout>

    </fragment>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:background="@color/rojo">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:text="@string/slidingpanel"
        android:textSize="16sp"/>

    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
