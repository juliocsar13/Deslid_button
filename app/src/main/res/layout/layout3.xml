<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="65dp"
    sothree:umanoShadowHeight="4dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="bottom|center"
        android:layout_marginBottom="0dp">
        <Button
            android:layout_width="295dp"
            android:layout_height="60dp"
            android:text="Llamar Taxi"
            android:id="@+id/btnCallTaxi"
            android:onClick="sendRequest"
            android:background="@drawable/asul"
            android:textColor="#ff000000"
            android:layout_margin="@dimen/layout_all_buttom_maps"
            android:textSize="@dimen/textsize_button_maps" />
        <Button
            android:layout_width="295dp"
            android:layout_height="60dp"
            android:text="Cancelar taxi"
            android:background="@drawable/rojo"
            android:id="@+id/btnCancelTaxi"
            android:onClick="cancelRequest"
            android:textColor="#ff000000"
            android:layout_margin="@dimen/layout_all_buttom_maps"
            android:textSize="@dimen/textsize_button_maps" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/SlidingPaneLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:src="@drawable/ic_action_user"
            android:layout_margin="2dp"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="#ffffff"
            android:text="@string/slidingpanel"
            android:textSize="16sp"/>


        </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:src="@drawable/ic_action_car">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="TU PAPI JULIO"/>

        </LinearLayout>
    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
