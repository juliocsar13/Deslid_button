<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.angel.appllevame_usuario.MapActivity">
    <!--android:background="@drawable/desing_button_tres"-->


    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom|center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/layout_bottom_bottom">
            <Button
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:text="Llamar Taxi"
                android:id="@+id/btnCallTaxi"
                android:onClick="sendRequest"
                android:background="@drawable/asul"
                android:textColor="#ff000000"
                android:layout_margin="@dimen/layout_all_buttom_maps"
                android:textSize="@dimen/textsize_button_maps" />
            <Button
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:text="Cancelar taxi"
                android:background="@drawable/rojo"
                android:id="@+id/btnCancelTaxi"
                android:onClick="cancelRequest"
                android:textColor="#ff000000"
                android:layout_margin="@dimen/layout_all_buttom_maps"
                android:textSize="@dimen/textsize_button_maps" />
        </LinearLayout>
    


</RelativeLayout>
