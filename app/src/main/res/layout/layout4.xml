<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_turn_left"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:onClick="returnBackMap"
            android:text="@string/Preview_peticion"
            android:id="@+id/btnMapRequest"
            android:textColor="#FFFFFF"
            android:enabled="true"
            android:drawableLeft="@drawable/ic_action_turn_left"
            android:background="@drawable/verde"
            android:focusable="false"
            android:layout_margin="2dp"
            android:textSize="16sp" />
        <Button
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:text="@string/changeConvertura"
            android:id="@+id/button"
            android:textColor="#FFFFFF"
            android:background="@drawable/asul"
            android:onClick="showCoverage"
            android:layout_margin="2dp"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
